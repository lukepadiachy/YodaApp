<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YodaApp.Views.FunFactsPageView"
             Shell.NavBarIsVisible="False"
             >
    <VerticalStackLayout>
        <!-- Title -->
        <Label 
        Text="Fun Facts With Yoda"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        FontSize="30"
        Margin="20"
        FontAttributes="Bold"/>

       
        <!-- Rounded Frame with Yoda Image -->
        
            <Image Margin="0,30,0,0"
            Source="babyyoda.jpg"
            Aspect="AspectFit"
            HeightRequest="400"
            WidthRequest="400"/>
        
        <Frame Margin="20"
         Padding="10"
         CornerRadius="20"
         BackgroundColor="LightGray"
         VerticalOptions="CenterAndExpand"
         HorizontalOptions="CenterAndExpand" >
            <Label Text="Did you know, hmm? In the Force, great power lies, but in a single smile, endless galaxies can be brightened, yes. Share a smile today, and may the Force be with you, always."
                   FontSize="17"/>
        </Frame>


        <!-- Button -->
        <Button
        BackgroundColor="ForestGreen"
        Text="Fun Fact"
        TextColor="White"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Margin="20"/>

        
    </VerticalStackLayout>
</ContentPage>